@model PatientCart.Models.VisitHistories

@{
    ViewBag.Title = "Редактирование";
}

<h2>Редактирование</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label for="Complaints" class="control-label col-md-2">
            Жалобы
        </label>
        <div class="col-md-10">
            <textarea name="Complaints" required class="form-control">@Model.Complaints</textarea>
            @Html.ValidationMessageFor(model => model.Complaints, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="VisitDate" class="control-label col-md-2">
            Дата посещения
        </label>
        <div class="col-md-10">
            <input type="date" name="VisitDate" value="@Model.VisitDate.ToString("yyyy-MM-dd")" class="form-control" required />
            @Html.ValidationMessageFor(model => model.VisitDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="DoctorId" class="control-label col-md-2">
            Лечащий врач
        </label>
        <div class="col-md-10">
            @Html.DropDownList("DoctorId", null, htmlAttributes: new { @class = "form-control", @required = "true" })
            @Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="PatientId" class="control-label col-md-2">
            Пациент
        </label>
        <div class="col-md-10">
            @Html.DropDownList("PatientId", null, htmlAttributes: new { @class = "form-control", @required = "true" })
            @Html.ValidationMessageFor(model => model.PatientId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="DiagnosisId" class="control-label col-md-2">
            Диагноз
        </label>
        <div class="col-md-10">
            @Html.DropDownList("DiagnosisId", null, htmlAttributes: new { @class = "form-control", @required = "true" })
            @Html.ValidationMessageFor(model => model.DiagnosisId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Изменить" class="btn btn-default" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
